#!/bin/bash

source timeclock.sh

command=$1;
# clockStatus=$(getLastAction)

case "$command" in
	in )
		if lastActionIsValid 'OUT'; then
			clockIn "$(getTags "$@")"
		else
			actionErrMessage ${command^^}
		fi
		;;
	out )
		if lastActionIsValid 'IN'; then
			clockOut "$(getTags "$@")"
		else
			actionErrMessage ${command^^}
		fi
		;;
	hours )
		calcHours
		;;
	* )
		displayHelp
esac
